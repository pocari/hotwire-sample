<section class="section">
  <div class="container">
    <p style="color: green"><%= notice %></p>

    <div class="title">
      <h1>Chicks</h1>
    </div>

    <div id="chicks">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Age</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @chicks.each do |chick| %>
            <%= render chick %>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @chicks %>

    <%= link_to "New chick", new_chick_path %>
  </div>
</section>
