<section class="section">
  <div class="container">
    <p style="color: green"><%= notice %></p>

    <div class="title">
      <h1>Cats</h1>
    </div>

    <div id="cats">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Age</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cats.each do |cat| %>
            <%= render cat %>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @cats %>

    <%= link_to "New cat", new_cat_path %>
  </div>
</section>
